generator client {
  provider        = "prisma-client-js"
  output          = "../generated/prisma"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  extensions = [postgis]
}

model User {
  id         Int        @id @default(autoincrement())
  userName   String
  email      String     @unique @db.VarChar(191)
  password   String     @db.VarChar(191)
  avatar   String?     // stores the URL
  avatarPublicId   String? // stores the cloudinfary public_id
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  role       Role       @default(Customer)
  properties Property[]

  @@map("users")
}

model Property {
  id          Int             @id @default(autoincrement())
  title       String
  description String?
  price       Float
  type        PropertyType
  status      PropertyStatus  @default(Available)
  bedrooms    Int?
  bathrooms   Int?
  area        Float?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  location    Unsupported("geography(point, 4326)")?
  userId      Int
  longitude   Float?
  latitude    Float?
  user        User            @relation(fields: [userId], references: [id])
  images      PropertyImage[]

  @@map("properties")
}

model PropertyImage {
  id         Int      @id @default(autoincrement())
  imageUrl   String
  propertyId Int
  createdAt  DateTime @default(now())
  publicId   String
  property   Property @relation(fields: [propertyId], references: [id])

  @@map("property_images")
}

enum Role {
  Admin
  Owner
  Customer
}

enum PropertyType {
  Apartment
  House
  Land
}

enum PropertyStatus {
  Available
  Sold
  Rent
}
